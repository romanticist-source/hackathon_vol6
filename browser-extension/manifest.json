{
    "manifest_version": 3,
    "name": "Browser to VSCode Sync",
    "version": "1.0.0",
    "description": "ブラウザの開発者ツールで行ったHTML/CSSの変更をVS Codeにリアルタイム同期",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "ws://localhost:*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Browser to VSCode Sync"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}